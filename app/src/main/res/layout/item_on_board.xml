<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <pl.droidsonroids.gif.GifImageView
        android:layout_marginTop="160dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgBoardItem"/>


    <TextView
        app:layout_constraintTop_toBottomOf="@id/imgBoardItem"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:paddingHorizontal="24sp"
        android:textColor="@color/black"
        android:text="@string/title234"
        android:id="@+id/tvOnBoardItemTit"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tvOnBoardItemTit"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:paddingHorizontal="24sp"
        android:text="@string/description234"
        android:id="@+id/tvOnBoardItemDes"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>